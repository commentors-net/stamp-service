<Window x:Class="StampService.AdminGUI.Views.AddSecretDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Add New Secret" Height="550" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
 FontFamily="{materialDesign:MaterialDesignFont}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      ResizeMode="NoResize">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
     <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
    <StackPanel Grid.Row="0">
            <TextBlock Text="Add New Secret" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,8"/>
        <TextBlock Text="Manually add a secret to the secure storage" 
  FontSize="13" Opacity="0.7" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" Margin="0,16,0,16" VerticalScrollBarVisibility="Auto">
          <StackPanel>
      <!-- Secret Name -->
          <TextBox x:Name="SecretNameTextBox"
materialDesign:HintAssist.Hint="Secret Name (required)"
  Style="{StaticResource MaterialDesignOutlinedTextBox}"
     Margin="0,0,0,16"
            MaxLength="100"/>

  <!-- Secret Type -->
   <ComboBox x:Name="SecretTypeComboBox"
               materialDesign:HintAssist.Hint="Secret Type"
     Style="{StaticResource MaterialDesignOutlinedComboBox}"
      Margin="0,0,0,16"
           SelectedIndex="0">
                  <ComboBoxItem Content="Mnemonic (12 words)"/>
              <ComboBoxItem Content="Private Key (Hex)"/>
   <ComboBoxItem Content="API Key"/>
      <ComboBoxItem Content="Password"/>
        <ComboBoxItem Content="Other"/>
      </ComboBox>

                <!-- Network -->
         <ComboBox x:Name="NetworkComboBox"
                materialDesign:HintAssist.Hint="Network (optional)"
       Style="{StaticResource MaterialDesignOutlinedComboBox}"
          Margin="0,0,0,16"
       SelectedIndex="0">
<ComboBoxItem Content="(None)"/>
         <ComboBoxItem Content="Ethereum Mainnet"/>
            <ComboBoxItem Content="Ethereum Testnet (Sepolia)"/>
    </ComboBox>

       <!-- Secret Value -->
    <TextBox x:Name="SecretValueTextBox"
  materialDesign:HintAssist.Hint="Secret Value (required)"
 Style="{StaticResource MaterialDesignOutlinedTextBox}"
             Margin="0,0,0,16"
     AcceptsReturn="True"
     TextWrapping="Wrap"
     VerticalScrollBarVisibility="Auto"
       MaxLength="10000"
        Height="120"/>

          <!-- Security Warning -->
     <Border Background="#FFF3E0" BorderBrush="#FF9800" BorderThickness="1" 
 CornerRadius="4" Padding="12" Margin="0,0,0,16">
         <StackPanel Orientation="Horizontal">
       <materialDesign:PackIcon Kind="AlertCircle" 
     Foreground="#FF6F00" 
             Width="20" Height="20" 
     VerticalAlignment="Top" 
            Margin="0,0,8,0"/>
 <TextBlock TextWrapping="Wrap" FontSize="12">
     <Run Text="?? Security Warning:"/><LineBreak/>
               <Run Text="The secret will be encrypted with DPAPI and stored in Windows Registry."/><LineBreak/>
   <Run Text="Only enter sensitive data on trusted, secure computers."/>
  </TextBlock>
       </StackPanel>
    </Border>

            <!-- Description/Notes -->
                <TextBox x:Name="DescriptionTextBox"
             materialDesign:HintAssist.Hint="Description/Notes (optional)"
       Style="{StaticResource MaterialDesignOutlinedTextBox}"
      AcceptsReturn="True"
   TextWrapping="Wrap"
         VerticalScrollBarVisibility="Auto"
     MaxLength="500"
           Height="80"/>
         </StackPanel>
      </ScrollViewer>

      <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
   <Button Content="CANCEL" 
     Style="{StaticResource MaterialDesignFlatButton}"
            Click="CancelButton_Click"
       Margin="0,0,8,0"
      Width="100"/>
      <Button x:Name="SaveButton"
      Content="SAVE SECRET" 
     Style="{StaticResource MaterialDesignRaisedButton}"
     Click="SaveButton_Click"
  Width="140"/>
        </StackPanel>
    </Grid>
</Window>
