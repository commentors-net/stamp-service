<Window x:Class="StampService.AdminGUI.Views.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Settings" 
   Height="600" Width="700"
  WindowStartupLocation="CenterOwner"
   Background="{DynamicResource MaterialDesignPaper}"
  FontFamily="{materialDesign:MaterialDesignFont}">

<Grid>
        <Grid.RowDefinitions>
     <RowDefinition Height="Auto"/>
 <RowDefinition Height="*"/>
 <RowDefinition Height="Auto"/>
   </Grid.RowDefinitions>

        <!-- Header -->
     <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16">
       <StackPanel Orientation="Horizontal">
   <materialDesign:PackIcon Kind="Settings" Width="28" Height="28" VerticalAlignment="Center" Margin="0,0,12,0"/>
        <TextBlock Text="Settings" FontSize="20" VerticalAlignment="Center" FontWeight="Medium"/>
    </StackPanel>
    </materialDesign:ColorZone>

 <!-- Content -->
 <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
    <StackPanel Margin="24">

   <!-- Appearance Section -->
   <materialDesign:Card Padding="16" Margin="0,0,0,16">
     <StackPanel>
   <TextBlock Text="Appearance" Style="{StaticResource SectionHeaderStyle}"/>
      
     <StackPanel Margin="0,0,0,16">
      <TextBlock Text="Theme:" FontWeight="SemiBold" Margin="0,0,0,8"/>
     <ComboBox x:Name="ThemeComboBox" 
     Style="{StaticResource MaterialDesignOutlinedComboBox}"
    Width="200"
HorizontalAlignment="Left">
 <ComboBoxItem Content="Light" IsSelected="True"/>
     <ComboBoxItem Content="Dark"/>
       </ComboBox>
<TextBlock Text="Application restart required" 
  FontSize="11" 
    Opacity="0.7" 
   Margin="0,4,0,0"/>
        </StackPanel>
  </StackPanel>
   </materialDesign:Card>

    <!-- Behavior Section -->
    <materialDesign:Card Padding="16" Margin="0,0,0,16">
     <StackPanel>
<TextBlock Text="Behavior" Style="{StaticResource SectionHeaderStyle}"/>
   
     <CheckBox x:Name="AutoRefreshCheckBox"
     Content="Auto-refresh dashboard"
   IsChecked="True"
       Margin="0,0,0,12"/>
      
        <StackPanel Margin="0,0,0,16">
   <TextBlock Text="Refresh interval (seconds):" FontWeight="SemiBold" Margin="0,0,0,8"/>
 <Grid>
       <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
    <ColumnDefinition Width="Auto"/>
  </Grid.ColumnDefinitions>
     <Slider x:Name="RefreshIntervalSlider"
Grid.Column="0"
    Minimum="10"
      Maximum="300"
      Value="30"
           TickFrequency="10"
  IsSnapToTickEnabled="True"
   Margin="0,0,8,0"/>
      <TextBlock Grid.Column="1" 
    Text="{Binding ElementName=RefreshIntervalSlider, Path=Value, StringFormat={}{0:F0}s}"
     VerticalAlignment="Center"
MinWidth="40"/>
  </Grid>
       </StackPanel>

   <CheckBox x:Name="ShowNotificationsCheckBox"
     Content="Show desktop notifications"
      IsChecked="True"
  Margin="0,0,0,12"/>
   
      <CheckBox x:Name="ConfirmDeletionsCheckBox"
  Content="Confirm before deleting secrets"
    IsChecked="True"/>
   </StackPanel>
    </materialDesign:Card>

<!-- Security Section -->
            <materialDesign:Card Padding="16" Margin="0,0,0,16">
    <StackPanel>
    <TextBlock Text="Security" Style="{StaticResource SectionHeaderStyle}"/>
      
     <TextBlock TextWrapping="Wrap" Margin="0,0,0,12">
  This application requires administrator privileges to function correctly.
        Current status is shown in the footer of the main window.
   </TextBlock>
      
        <Button Content="View Security Information"
      Style="{StaticResource MaterialDesignOutlinedButton}"
       HorizontalAlignment="Left"
     Click="ResetButton_Click"/>
       </StackPanel>
   </materialDesign:Card>

   <!-- About Section -->
        <materialDesign:Card Padding="16">
      <StackPanel>
        <TextBlock Text="About" Style="{StaticResource SectionHeaderStyle}"/>
      
    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
     <TextBlock Text="Version:" FontWeight="SemiBold" Width="100"/>
    <TextBlock Text="1.0.0"/>
  </StackPanel>
     
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
      <TextBlock Text="Build:" FontWeight="SemiBold" Width="100"/>
 <TextBlock Text="Release"/>
  </StackPanel>
      
 <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
   <TextBlock Text="Framework:" FontWeight="SemiBold" Width="100"/>
     <TextBlock Text=".NET 8.0"/>
     </StackPanel>

   <Button Content="View Documentation"
      Style="{StaticResource MaterialDesignFlatButton}"
 HorizontalAlignment="Left"
       Margin="0,12,0,0"/>
  </StackPanel>
   </materialDesign:Card>

      </StackPanel>
 </ScrollViewer>

   <!-- Footer -->
  <materialDesign:ColorZone Grid.Row="2" Mode="PrimaryLight" Padding="12">
     <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
   <Button Content="Reset to Defaults" 
Click="ResetButton_Click"
       Style="{StaticResource MaterialDesignOutlinedButton}"
  Margin="0,0,8,0"/>
   <Button Content="Save" 
    Click="SaveButton_Click"
Style="{StaticResource MaterialDesignRaisedButton}"
   Margin="0,0,8,0"/>
 <Button Content="Cancel" 
    Click="CancelButton_Click"
  Style="{StaticResource MaterialDesignFlatButton}"/>
</StackPanel>
        </materialDesign:ColorZone>
  </Grid>
</Window>
